<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Text?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="BMICalculator.BMICalculatorController">
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <children>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Weight" textAlignment="CENTER" wrappingWidth="100.0859375" />
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="BMI" textAlignment="CENTER" wrappingWidth="100.0859375" GridPane.rowIndex="3" />
        <TextField GridPane.columnIndex="1" />
        <TextField fx:id="weightTextField" GridPane.columnIndex="1" />
        <Button mnemonicParsing="false" onAction="#calculateButtonPressed" prefHeight="26.0" prefWidth="99.0" text="Calculate" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <Text fx:id="tipTextField" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" wrappingWidth="98.7294921875" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Text fx:id="bmiText" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" wrappingWidth="98.7294921875" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Height" textAlignment="CENTER" wrappingWidth="100.0859375" GridPane.rowIndex="1" />
      <TextField fx:id="heightTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <ToggleButton fx:id="english" mnemonicParsing="false" prefHeight="26.0" prefWidth="99.0" text="lbs/in" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <ToggleButton fx:id="metric" mnemonicParsing="false" prefHeight="26.0" prefWidth="99.0" selected="true" text="kg/m" GridPane.rowIndex="2" />
      <Text fx:id="bmiRes" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="98.7294921875" GridPane.rowIndex="4" />
    </children>
</GridPane>
